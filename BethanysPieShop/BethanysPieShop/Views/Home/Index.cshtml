@model HomeViewModel

    <div class="row">
        <h2>@Model.Title</h2>
    </div>

    <div class="row">

        @foreach (var pie in Model.Pies)
        {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="img-thumbnail">
                    <img src="@pie.ImageThumbnailUrl" alt="" />
                    <div class="caption">
                        <h3 class="pull-right">@pie.Price.ToString("c")</h3>
                        <h3>
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@pie.Id">@pie.Name</a>
                        </h3>
                        <form method="post">
                            <input type="hidden" value="@pie.Id" />
                            <input type="submit" value="Add to cart" class="btn btn-danger" />
                            <input type="number" value="" class="quantityInput" />
                        </form>
                        <p>@pie.ShortDescription</p>
                    </div>
                </div>
            </div>
        }
    </div>